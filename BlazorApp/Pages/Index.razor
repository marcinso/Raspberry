@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<input type="text"  @onchange="OnChange" />
<button @onclick="click">Copy</button>

<p>Text: @text</p>
<br />
<br />
<p> Text 2: @copyText</p>

@code{

    private string text;
    private string copyText;
    public void click()
    {
        copyText = text;
    }

    public void OnChange(ChangeEventArgs arg)
    {
        text = arg.Value.ToString();
        this.StateHasChanged();
    }
}